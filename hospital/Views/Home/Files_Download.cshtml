@{
    ViewBag.Title = "說明文件下載";
    List<string> files = ViewBag.files;
}
<!--[ Recent Users ] start-->
<div class="col-12">
    <div class="card Recent-Users">
        <div class="card-header">
            <h5><span class="f-w-700">@ViewBag.Title</span></h5>
        </div>
        <div class="card-block px-0 py-3">
            <div class="table-responsive">
                <table class="table table-hover">
                    @foreach (var file in files)
                    {
                    <tr>
                        <td><h6 class="text-muted f-w-700">@file</h6></td>
                        <td>
                            <a class="btn btn-secondary" href="@Url.Action("DownloadFile","Home", new { fileName = file })">
                                <span class="pcoded-micon"><i class="feather icon-download"></i></span>
                            </a>
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<!--[ Recent Users ] end-->
